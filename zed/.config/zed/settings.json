{
  // Zed setting
  "ui_font_size": 14.0,
  "terminal": {
    "font_weight": 500
  },
  "project_panel": {
    "git_status": true,
    "entry_spacing": "comfortable",
    "dock": "left"
  },
  "use_system_window_tabs": false,
  "preview_tabs": {
    "enable_keep_preview_on_code_navigation": true,
    "enable_preview_from_file_finder": true
  },
  "tabs": {
    "file_icons": true,
    "git_status": true
  },
  "diagnostics": {
    "inline": {
      "enabled": true
    }
  },
  "colorize_brackets": false,
  "inlay_hints": {
    "enabled": true
  },
  "show_whitespaces": "trailing",
  "always_treat_brackets_as_autoclosed": true,
  "indent_guides": {
    // "background_coloring": "indent_aware",
    "coloring": "indent_aware"
  },
  "toolbar": {
    "code_actions": true
  },
  "minimap": {
    "show": "never"
  },
  "telemetry": {
    "diagnostics": false,
    "metrics": false
  },
  "helix_mode": false,
  "icon_theme": "Material Icon Theme",
  "theme": {
    "mode": "system",
    "light": "Serene Day",
    "dark": "Serene Night"
  },

  "ui_font_weight": 500.0,
  "buffer_font_weight": 500.0,
  "buffer_font_size": 14.0,
  "ui_font_family": "VictorMono Nerd Font",
  "buffer_font_family": "VictorMono Nerd Font",

  "format_on_save": "off"
}
